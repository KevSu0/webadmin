rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Product images - only admins can upload/modify
    match /products/{productId}/{allPaths=**} {
      allow read: if true; // Public read access for product images
      allow write: if isAdmin(); // Only admins can upload/modify product images
      allow delete: if isAdmin(); // Only admins can delete product images
    }
    
    // Category images - only admins can upload/modify
    match /categories/{categoryId}/{allPaths=**} {
      allow read: if true; // Public read access for category images
      allow write: if isAdmin(); // Only admins can upload/modify category images
      allow delete: if isAdmin(); // Only admins can delete category images
    }
    
    // User profile images - users can manage their own
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access for profile images
      allow write: if isOwner(userId) || isAdmin(); // Users can upload their own, admins can manage all
      allow delete: if isOwner(userId) || isAdmin(); // Users can delete their own, admins can delete all
    }
    
    // Admin uploads - only admins can access
    match /admin/{allPaths=**} {
      allow read, write, delete: if isAdmin();
    }
    
    // Temporary uploads - authenticated users only
    match /temp/{userId}/{allPaths=**} {
      allow read, write, delete: if isOwner(userId) || isAdmin();
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}